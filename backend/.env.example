# Rename this file to .env and fill in your actual credentials and preferences

# Get your API key from https://openrouter.ai/keys
OPENROUTER_API_KEY="your_openrouter_api_key_here"

# Choose a model from OpenRouter, e.g., "mistralai/mistral-7b-instruct", "openai/gpt-3.5-turbo", "google/gemini-flash-1.5"
# See available models: https://openrouter.ai/docs#models
OPENROUTER_MODEL_NAME="mistralai/mistral-7b-instruct"

# Sentence Transformer model for embeddings. "all-MiniLM-L6-v2" is a good general-purpose model.
# Other options: "all-mpnet-base-v2", "multi-qa-MiniLM-L6-cos-v1"
# See https://www.sbert.net/docs/pretrained_models.html
EMBEDDING_MODEL_NAME="all-MiniLM-L6-v2"

# --- Optional Settings ---
# Maximum number of context chunks to retrieve for the LLM
MAX_CONTEXT_CHUNKS=5

# Chunk size for text processing (number of tokens)
CHUNK_SIZE=500

# Chunk overlap (number of tokens)
CHUNK_OVERLAP=50
